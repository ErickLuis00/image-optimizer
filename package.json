{
    "name": "image-optimizer",
    "version": "1.0.0",
    "description": "Image optimization for React using Hono as backend and Sharp as image processor",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.mjs",
            "require": "./dist/server.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts src/server.ts --format cjs,esm --dts --external react --external hono",
        "dev": "tsup src/index.ts src/server.ts --format cjs,esm --dts --watch --external react --external hono",
        "prepublishOnly": "pnpm build"
    },
    "keywords": [
        "vike",
        "image",
        "optimization",
        "sharp",
        "react",
        "image-component",
        "image-middleware"
    ],
    "author": "erickluis00",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/ErickLuis00/image-optimizer.git"
    },
    "peerDependencies": {
        "react": "^18.0.0",
        "hono": "^4.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": false
        },
        "hono": {
            "optional": false
        }
    },
    "dependencies": {
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^18.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    }
}